<Window x:Class="ACT_0_XAML1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACT_0_XAML1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Up Left" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Width ="80" Height="80" Background="Black"/>
        <Button Content="Up Right" Foreground="Yellow" HorizontalAlignment="Right" VerticalAlignment="Top" Width ="80" Height="80" Background="Black"/>
        <Button Content="Down Left" Foreground="Blue" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width ="80" Height="80" Background="Black"/>
        <Button Content="Down Right" Foreground="Green" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width ="80" Height="80" Background="Black"/>
    </Grid>
</Window>
